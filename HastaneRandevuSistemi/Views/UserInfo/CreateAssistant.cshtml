@model Assistant
@{
	ViewData["Title"] = "AssistantList";
	Layout = "/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Asistanlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Asistan Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Departman ID</label>
							<input type="text" asp-for="DepartmentID" class="form-control" />
							<br />
							<label>Unvan</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Ad Soyad</label>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<label>Kullanıcı Adı</label>
							<input type="text" asp-for="Username"class="form-control" />
							<br />
							<label>Şifre</label>
							<input type="text" asp-for="Password" class="form-control" />
							<br />
							<label>E-Posta</label>
							<input type="text" asp-for="Email" class="form-control" />
							<br />
							<label>Telefon No</label>
							<input type="text" asp-for="Phone" class="form-control" />
							<br />
							<button class="btn btn-primary">Asistanı Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>