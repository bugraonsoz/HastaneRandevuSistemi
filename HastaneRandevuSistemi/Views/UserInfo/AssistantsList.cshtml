@model List<Assistant>
@{
	ViewData["Title"] = "AssistantList";
	Layout = "/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Asistanlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Asistan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Asistanlar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
						</div>
						<table class="table mt-5">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Departman No</th>
									<th scope="col">Unvan</th>
									<th scope="col">Ad-Soyad</th>
									<th scope="col">Kullanıcı Adı</th>
									<th scope="col">Şifre</th>
									<th scope="col">E-Posta Adresi</th>
									<th scope="col">Telefon No</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.DepartmentID</td>
										<td>@item.Title</td>
										<td>@item.NameSurname</td>
										<td>@item.Username</td>
										<td>@item.Password</td>
										<td>@item.Email</td>
										<td>@item.Phone</td>
										<td><a href="DeleteAssistant/@item.AssistantID" class="btn btn-danger">Sil</a></td>
										<td><a href="UpdateAssistant/@item.AssistantID" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
								

							</tbody>
						</table>
						<td><a href="CreateAssistant" class="btn btn-primary">Yeni Asistan Ekle</a></td>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>