
@{
	Layout = "/Views/Layout/Index.cshtml";
    int count = 0;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Info</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #64b3f4, #a6c1ee); /* Mavi tonlarından güzel bir geçiş ekledim */
        }

        .container {
            width: 80%;
            margin: 150px auto;
            padding: 100px;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.9); /* Hafif beyaz bir arka plan ekledim */
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Hafif gölge efekti ekledim */
        }

        h1 {
            color: #333;
            font-size: 36px;
            margin-bottom: 30px;
        }

        .link-button {
            display: inline-block;
            margin: 20px 0; /* Bağlantılar arasındaki boşluğu artırdım */
            padding: 15px 30px;
            font-size: 18px;
            text-decoration: none;
            color: #fff;
            background-color: #007bff;
            border-radius: 5px;
            transition: transform 0.2s ease; /* Yalnızca hareket efekti */
        }

            .link-button:hover {
                transform: translateY(-3px);
                background-color: #007bff; /* Hover durumunda renk değişmesin */
            }

            .link-button i {
                margin-right: 8px;
            }

        .section-description {
            font-size: 18px;
            color: #555;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>User Info</h1>
        <p class="section-description">Asistanların ve Doktorların bilgilerine kolayca ulaşabilirsiniz.</p>
        <a href="AssistantsList" class="link-button">
            <i class="fas fa-user-graduate"></i> Asistanları Görüntülemek İçin Tıklayınız
        </a>
        <br>
        <a href="InstructorsList" class="link-button">
            <i class="fas fa-chalkboard-teacher"></i> Doktorları Görüntülemek İçin Tıklayınız
        </a>
    </div>

</body>
</html>