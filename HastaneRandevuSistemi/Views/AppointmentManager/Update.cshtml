@model HastaneRandevuSistemi.Models.Appointment

@{
    ViewBag.Title = "Randevu Güncelle";
    Layout = "/Views/Layout/Index.cshtml";
}

<h2>Randevuyu Güncelle</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="AppointmentId" />
        <label for="InstructorID">Öğretim Üyesi</label>
        <select asp-for="InstructorId" asp-items="ViewBag.Instructors" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label for="AssistantID">Asistan</label>
        <select asp-for="AssistantId" asp-items="ViewBag.Assistants" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Date">Tarih</label>
        <input asp-for="ShiftDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label for="Time">Saat Aralığı</label>
        <input asp-for="TimeSlot" class="form-control" type="text" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
