@model List<AssistantShiftViewModel>
@{
    Layout = "/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Nöbet Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Nöbetler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <table class="table mt-5">
                            <thead>
                                <tr>
									<th scope="col">#</th>
									<th scope="col">Ad-Soyad</th>
                                    <th scope="col">Departman Adı</th>
                                    <th scope="col">Nöbet Tarihi</th>
									<th scope="col">Nöbet Saati</th>
									<th scope="col">Telefon No</th>
                                    <th scope="col">E-Posta Adresi</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var shift in Model)
                                {
                                    count++;
                                    <tr>
										<td>@count</td>
										<td>@shift.NameSurname</td>
                                        <td>@shift.DepartmentName</td>
										<td>@shift.ShiftDate.ToShortDateString()</td>
										<td>@shift.ShiftDuration</td>
                                        <td>@shift.Phone</td>
                                        <td>@shift.Email</td>
                                        <td>
                                            <a asp-action="DeleteShift" asp-route-id="@shift.Id" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a asp-action="UpdateShift" asp-route-id="@shift.Id" class="btn btn-success">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a asp-action="CreateShift" class="btn btn-primary">Yeni Nöbet Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
